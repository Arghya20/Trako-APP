<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFF4"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:background="@drawable/header_design">

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="-24dp"
                    android:background="@drawable/rounded_circle">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-28dp"
                    android:background="@drawable/rounded_circle">

                </LinearLayout>

                <TextView
                    android:id="@+id/totalBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:paddingBottom="22dp"
                    android:text="₹200"
                    android:textColor="#000"
                    android:textSize="38sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTotalBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/totalBalance"
                    android:gravity="center"
                    android:text="Total Balance"
                    android:textColor="#3E3E3E"
                    android:textSize="18sp" />


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/showAllIncome"
                    android:layout_width="170dp"
                    android:layout_height="260dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/income_card_design"

                    >

                    <TextView
                        android:id="@+id/totalIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/incomeText"
                        android:gravity="center"
                        android:text="₹4000"
                        android:textColor="#ffff"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/incomeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Income"
                        android:textColor="#E6E6E6"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/addIncome"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="12dp"
                        android:background="@drawable/income_circle_button">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/showAllExpense"
                    android:layout_width="170dp"
                    android:layout_height="260dp"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/expense_card_design"

                    >

                    <TextView
                        android:id="@+id/totalExpense"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/expenseText"
                        android:gravity="center"
                        android:text="₹3800"
                        android:textColor="#ffff"
                        android:textSize="32sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/expenseText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="Expense"
                        android:textColor="#E6E6E6"
                        android:textSize="24sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/addExpense"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginHorizontal="14dp"
                        android:layout_marginVertical="12dp"
                        android:background="@drawable/expense_circle_button">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="#fff"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/monthlyOverviewButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View history" />

                <TextView
                    android:id="@+id/khoroch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ag"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="Khoroch"
                    android:textColor="#EFF0E8"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:text="Made with ❤️ by Arghya"
                    android:textColor="#999999"
                    android:textSize="12sp" />
            </RelativeLayout>

<!--            <TextView-->
<!--                android:id="@+id/lastUpdatedTime"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginTop="5dp"-->
<!--                android:text="Last updated: Never"-->
<!--                android:textColor="#673AB7"-->
<!--                android:textSize="14sp" />-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Recent Transactions"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentTransactionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>